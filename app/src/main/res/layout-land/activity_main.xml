<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="come.example.senasoft.trasmiautos.vista.MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/txv_mensaje"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/mensaje"
        android:textStyle="bold"
        android:layout_alignTop="@+id/img_logo"
        android:layout_alignLeft="@+id/btn_registrar"
        android:layout_alignStart="@+id/btn_registrar" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:onClick="registro"
        android:text="@string/btn_registrar"
        android:layout_alignBottom="@+id/participantes1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="126dp"
        android:layout_marginEnd="126dp" />
    <TextView
        android:id="@+id/senasoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/senasoft"
        android:textStyle="bold"
        android:layout_below="@+id/img_logo"
        android:layout_alignLeft="@+id/img_logo"
        android:layout_alignStart="@+id/img_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp" />
    <TextView
        android:id="@+id/participantes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participantes1"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/senasoft"
        android:layout_alignLeft="@+id/senasoft"
        android:layout_alignStart="@+id/senasoft" />
    <TextView
        android:id="@+id/participantes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participantes2"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/participantes1"
        android:layout_alignStart="@+id/participantes1" />

</RelativeLayout>
